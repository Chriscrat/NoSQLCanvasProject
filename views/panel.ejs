<% include header.ejs %>
    <body>
    <h1><%= title %></h1>
    <div id ="mainContainer">
            <div id="canvasBlock">
                <canvas id="mainCanvas" width="800" height="600" style="top:2%;left:10%;border:2px solid;"></canvas>
                <script>
                    var model="dot";
                    $("#mainCanvas").on('mousedown',function(e){
                       socket.emit('downCanvas', e.pageX, e.pageY, model);
                    });

                    $('#mainCanvas').on('mousemove', function(e){
                        socket.emit('moveCanvas', e.pageX, e.pageY);
                    });

                    $('#mainCanvas').on('mouseup', function(e){
                        socket.emit('upCanvas', e.pageX, e.pageY);
                    });

                </script>
                <br>
                <input type="button" value="Clear" id="clr" size="23" onclick="erase()">
            </div>
            <div id="canvasTool">
                <p>Positions :</p>
                On down
                <div id="xDown">x:</div>
                <div id="yDown">y:</div>
                On move
                <div id="xMove">x:</div>
                <div id="yMove">y:</div>
                On up
                <div id="xUp">x:</div>
                <div id="yUp">y:</div>
                <hr>
                <p>Colors :</p>
                <div style="background:green;" class="colorBlock" id="green" onclick="color(this)"></div>
                <div style="background:blue;" class="colorBlock" id="blue" onclick="color(this)"></div>
                <div style="background:red;" class="colorBlock" id="red" onclick="color(this)"></div>
                <div style="background:yellow;" class="colorBlock" id="yellow" onclick="color(this)"></div>
                <div style="background:orange;" class="colorBlock" id="orange" onclick="color(this)"></div>
                <div style="background:black;" class="colorBlock" id="black" onclick="color(this)"></div>
                <div style="background:white;" class="colorBlock" id="white" onclick="color(this)"></div>
                <br><br>
                <hr>
                <p>Models :</p>
                <canvas id="dot" width="100" height="100" onclick="line()"></canvas>
                <script>
                    var c=document.getElementById("dot");
                    var ctx=c.getContext("2d");
                    ctx.beginPath();
                    ctx.arc(50,50,3,0,2*Math.PI);
                    ctx.stroke();

                    $("#mainCanvas").on('click', function(){
                        model="dot";
                    });


                </script>

                <canvas id="circle" width="100" height="100" onclick="circle()"></canvas>
                <script>
                    var c=document.getElementById("circle");
                    var ctx=c.getContext("2d");
                    ctx.beginPath();
                    ctx.arc(50,50,40,0,2*Math.PI);
                    ctx.stroke();

                    $("#mainCanvas").on('click', function(){
                        model="circle";
                    });
                </script>

                <canvas id="square" width="100" height="100" onclick="square()"></canvas>
                <script>
                    var c=document.getElementById("square");
                    var ctx=c.getContext("2d");
                    ctx.beginPath();
                    ctx.rect(15, 20, 65, 65);
                    ctx.fillStyle = 'white';
                    ctx.fill();
                    ctx.lineWidth = 1;
                    ctx.stroke();

                    $("#mainCanvas").on('click', function(){
                        model="square";
                    });
                </script>

            </div>
        </div>
    </body>
<% include footer.ejs %>